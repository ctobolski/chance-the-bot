{
  "name": "starter",
  "version": "1.0.0",
  "description": "A quick up and running node ts project",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "build:watch": "yarn build --watch",
    "server": "nodemon --exec node build/Main.js",
    "format": "prettier --write \"**/*.+(ts|json|js|)\"",
    "start": "tsc  && concurrently \"yarn run build:watch\" \"yarn run server\""
  },
  "author": "ctobolski",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "concurrently": "^4.1.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.3"
  }
}
